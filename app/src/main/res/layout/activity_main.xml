<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context="com.example.rachel.mhciproject.MainActivity">


    <TabHost
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clipToPadding="false"
            android:minWidth="@dimen/cast_expanded_controller_ad_in_progress_label_layout_height" />
        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="76dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlways" />



                <LinearLayout
                    android:id="@+id/tab"
                    android:text="@string/tab_text"

            android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
                <FrameLayout android:id="@+id/TabContent"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"/>


                <LinearLayout
                    android:id="@+id/tab1"
                    android:text="@string/tab_text2"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </TabHost>

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/jumping_jacks_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#fda805"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_marginLeft="17dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:paddingTop="50dp" />

    <Button
        android:id="@+id/to_category_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#b9ecff"
        android:gravity="center"
        android:text="START WORKOUT" />

    <TextView
        android:id="@+id/high_knees_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lunges_text_view"
        android:text="Lunges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/lunges_circle_progress"
        android:layout_alignRight="@+id/lunges_circle_progress"
        android:layout_alignEnd="@+id/lunges_circle_progress" />

    <TextView
        android:id="@+id/squats_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squats_circle_progress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/push_ups_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to_category_button" />


    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/lunges_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#4475e5"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_above="@+id/push_ups_text_view"
        android:layout_alignStart="@+id/jumping_jacks_text_view"
        android:layout_marginBottom="8dp" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/sit_ups_circle_progress"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#a138ea"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_width="100dp"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/lunges_circle_progress"
        android:paddingTop="50dp" />

    <TextView
        android:id="@+id/jumping_jacks_text_view"
        android:text="Jumping Jacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumping_jacks_circle_progress"
        android:layout_alignStart="@+id/jumping_jacks_circle_progress" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/push_ups_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#ff289f"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/jumping_jacks_circle_progress"
        android:layout_toEndOf="@+id/squats_text_view"
        android:layout_marginStart="12dp" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/high_knees_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#38ea4d"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/sit_ups_circle_progress"
        android:layout_alignStart="@+id/push_ups_circle_progress" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/squats_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#ffec37"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/lunges_circle_progress"
        android:layout_alignStart="@+id/high_knees_circle_progress" />

    <TextView
        android:id="@+id/sit_ups_text_view"
        android:text="SitUps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_below="@+id/sit_ups_circle_progress"
        android:layout_alignEnd="@+id/lunges_text_view" />

    <TextView
        android:text="Push Ups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/push_ups_circle_progress"
        android:layout_alignEnd="@+id/push_ups_circle_progress"
        android:layout_marginEnd="17dp"
        android:id="@+id/textView" />

    <TextView
        android:text="High Knees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/high_knees_circle_progress"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/textView2" />

    <TextView
        android:text="Squats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/squats_circle_progress"
        android:layout_alignStart="@+id/textView" />

    <fragment android:name="com.example.rachel.mhciproject.History"
        android:id="@+id/history"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/to_category_button"
        android:layout_toEndOf="@+id/push_ups_circle_progress"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/jumping_jacks_circle_progress" />

</RelativeLayout>
