<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context="com.example.rachel.mhciproject.MainActivity">


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/to_category_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#b9ecff"
        android:gravity="center"
        android:text="START WORKOUT" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/sit_ups_circle_progress"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#a138ea"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_width="100dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/graph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/high_knees_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#38ea4d"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/sit_ups_circle_progress"
        android:layout_centerHorizontal="true" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/jumping_jacks_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#fda805"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/high_knees_circle_progress"
        android:layout_toRightOf="@+id/high_knees_circle_progress"
        android:layout_toEndOf="@+id/high_knees_circle_progress"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/push_ups_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#ff289f"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/to_category_button"
        android:layout_alignLeft="@+id/sit_ups_circle_progress"
        android:layout_alignStart="@+id/sit_ups_circle_progress" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/squats_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#ffec37"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/push_ups_circle_progress"
        android:layout_alignLeft="@+id/high_knees_circle_progress"
        android:layout_alignStart="@+id/high_knees_circle_progress" />

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/lunges_circle_progress"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cpv_circle_color="#4475e5"
        app:cpv_circle_width="6dp"
        app:cpv_background_circle_width="1dp"
        app:cpv_background_circle_color="#5b253048"
        app:cpv_text_prefix="%"
        app:cpv_text_size="30"
        app:cpv_text_color="#27375c"
        android:layout_alignTop="@+id/squats_circle_progress"
        android:layout_alignLeft="@+id/jumping_jacks_circle_progress"
        android:layout_alignStart="@+id/jumping_jacks_circle_progress" />

    <TextView
        android:id="@+id/high_knees_text_view"
        android:text="High Knees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sit_ups_text_view"
        android:layout_alignBottom="@+id/sit_ups_text_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/jumping_jacks_text_view"
        android:text="Jumping Jacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sit_ups_text_view"
        android:layout_alignBottom="@+id/sit_ups_text_view"
        android:layout_alignRight="@+id/jumping_jacks_circle_progress"
        android:layout_alignEnd="@+id/jumping_jacks_circle_progress" />

    <TextView
        android:id="@+id/lunges_text_view"
        android:text="Lunges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/lunges_circle_progress"
        android:layout_alignRight="@+id/lunges_circle_progress"
        android:layout_alignEnd="@+id/lunges_circle_progress" />

    <TextView
        android:id="@+id/squats_text_view"
        android:text="Squats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squats_circle_progress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sit_ups_text_view"
        android:text="SitUps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sit_ups_circle_progress"
        android:layout_alignLeft="@+id/sit_ups_circle_progress"
        android:layout_alignStart="@+id/sit_ups_circle_progress"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/push_ups_text_view"
        android:text="PushUps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to_category_button"
        android:layout_alignLeft="@+id/sit_ups_text_view"
        android:layout_alignStart="@+id/sit_ups_text_view" />
</RelativeLayout>
